/* components/cheatcard/index.wxss */
@import '../../iconfont/iconfont.wxss';

.cheatcard-view {
  /* background-color: #66CCFF; */
  background-image: linear-gradient(#66CCFF, #99CCFF);
  width: 98%-10rpx;
  border-radius: 8rpx;
  box-shadow: 5px 5px 5px #cdcfcf;
  margin-left: 1%;
  margin-right: 1%;
  display: flex;
  flex-direction: column;

  padding: 10rpx;
}

.title-view {
  margin-bottom: 5rpx;
  align-items: center;
  display: flex;

}

.by-text {
  color: white;
  font-size: small;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.desc-text {
  color: black;
  margin-top: 5rpx;
  margin-bottom: 5rpx;

  /* text-shadow: 0px 1px rgba(0, 0, 0, 0.3); */
  /* font-family: Consolas, Monaco, 'Andale Mono', monospace; */
}

.btn-style {
  float: right;
  border-radius: 10rpx;

  margin-top: 5rpx;
  margin-bottom: 5rpx;
}

.avatar {
  margin-top: 0rpx;
}

.footer-view {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row-reverse;
}

.footer-view-right {
  width: 50%;
  display: flex;
  flex-direction: row-reverse;
}

.footer-view-left {
  width: 50%;
  display: flex;
}

.btn-copy {
  color: #9d9d9d;
  height: 20rpx;
  width: 20rpx;
}
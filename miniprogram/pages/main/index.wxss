/* miniprogram/pages/main/index.wxss */

page {
  height: 100%;
}

.banner-view {
  width: 100%;
  height: 30%;
  padding-bottom: 15rpx;
}

.grid-view {
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
}

.icon-custom {
  color: #6699FF;
  font-size: 60rpx;
}

.icon-text {
  padding-top: 10rpx;
  color: #A9A9A9;
  font-size: 25rpx;
}

/* 关于页面的上部背景 */
.about-banner-view {
  /* background-image: linear-gradient(#66CCFF, #99CCFF); */
  background-image: linear-gradient(#66CCFF, #00CC99);
  width: 98%-10rpx;
  border-radius: 8rpx;
  box-shadow: 5px 5px 5px #cdcfcf;
  margin-left: 1%;
  margin-right: 1%;
  display: flex;
  flex-direction: column;
  height: 30%;

  padding: 10rpx;

  align-items: center;
  justify-content: space-around;
}

.banner-text {
  color: white;
}

.author-text {
  font-size: smaller;
}

.logo-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  height: 55%;
  /* background-color: green; */
}

.banner-text-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* background-color: red; */
  height: 45%;
}

.about-list-view {
  height: 40%;
  width: 92%;
  background-color: #f2f6f8;
  align-self: center;
  box-shadow: 7px 7px 7px #cdcfcf;
}
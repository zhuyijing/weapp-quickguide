/* miniprogram/pages/main/index.wxss */

page {
  height: 100%;
}

.banner-view {
  width: 100%;
  height: 30%;
  padding-bottom: 15rpx;
}

.grid-view {
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
}

.icon-custom {
  color: #6699FF;
  font-size: 60rpx;
}

.icon-text {
  padding-top: 10rpx;
  color: #A9A9A9;
  font-size: 25rpx;
}

/* 关于页面的上部背景 */
.about-banner-view {
  /* background-image: linear-gradient(#66CCFF, #99CCFF); */
  background-image: linear-gradient(#66CCFF, #00CC99);
  width: 98%-10rpx;
  border-radius: 8rpx;
  box-shadow: 5px 5px 5px #cdcfcf;
  margin-left: 1%;
  margin-right: 1%;
  display: flex;
  flex-direction: column;

  height: 30%;

  padding: 10rpx;
}